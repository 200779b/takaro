{
  "name": "@takaro/api",
  "version": "0.0.1",
  "description": "REST API for Takaro",
  "main": "dist/main.js",
  "types": "main.ts",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon  --config ../../nodemon.json",
    "build": "tsc -p ./tsconfig.build.json",
    "test": "npm run test:unit --if-present && npm run test:integration --if-present",
    "test:unit": "ts-mocha -p ./tsconfig.json src/**/*.unit.test.ts",
    "test:integration": "ts-mocha -p ./tsconfig.json --timeout 5000 --file ../test/src/waitUntilReady.ts src/**/*.integration.test.ts",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@takaro/db": "0.0.1",
    "@takaro/http": "0.0.1",
    "basic-auth": "^2.0.1",
    "bcrypt": "^5.0.1",
    "human-id": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8"
  }
}