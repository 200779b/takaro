{
  "name": "takaro",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "start": "npm --workspaces run-script start",
    "start:dev": "nodemon",
    "build": "npx --workspaces tsc -p tsconfig.build.json",
    "lint": "npx --workspaces eslint \"**/*.{js,ts}\" --ignore-path ../../.eslintignore",
    "lint:fix": "npx --workspaces eslint \"**/*.{js,ts}\" --ignore-path ../../.eslintignore --fix",
    "prettier": "npx --workspaces prettier --check 'src/**/*.ts'",
    "prettier:fix": "npx --workspaces prettier --write 'src/**/*.ts'",
    "clean": "npx --workspaces rimraf node_modules dist",
    "prepare": "[ \"$NODE_ENV\" = production ] && exit 0; link-parent-bin"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "7.x.x"
  },
  "author": "Niek Candaele",
  "license": "MIT",
  "homepage": "https://takaro.app",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.0",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "link-parent-bin": "^2.0.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.13",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "keywords": [],
  "workspaces": [
    "packages/*"
  ]
}
